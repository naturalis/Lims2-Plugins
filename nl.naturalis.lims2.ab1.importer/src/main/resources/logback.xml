<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<timestamp key="date" datePattern="yyyyMMddHHmmss"/>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %5p | %t | %-55logger{55} | %m %n</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<!-- <file>C:/Geneious 8.1 Data/log/nl.naturalis.lim2.ab1.importer/lims2-import.${date}.log</file>  -->
		<file>C:/Geneious 8.1 Data/log/nl.naturalis.lim2.ab1.importer/AB1-Import.${date}.xml</file>
		<append>true</append>
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
		 <layout class="ch.qos.logback.classic.log4j.XMLLayout">
            <locationInfo>false</locationInfo>
         </layout>
		 <pattern>%d %5p | %t | %-55logger{55} | %m %n</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="FILE" />
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>
